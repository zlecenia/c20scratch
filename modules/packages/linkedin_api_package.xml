    <name>LinkedIn Integration Demo</name>
    <description>Complete example of LinkedIn API usage</description>
    <xml_content>
      <!-- This would contain a complete Blockly XML project demonstrating LinkedIn API usage -->
    </xml_content>
  </demo_project>
</module_package>
